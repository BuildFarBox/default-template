extends base
block title
	title= post.title
block content

	.post.post_in_detail
		h2.title= post.title
		span.date Published on {{post.date.format('%Y-%m-%d')}}
		.post_body= post.content
		.info
			span.publish_date(title="Public Date")
				i.fa.fa-clock-o
				|&nbsp;{{post.date.format('%Y-%m-%d %H:%M')}}
			span.visitors(title="Views")
				i.fa.fa-user
				|&nbsp;{{ post.visits or 0 }}
			a.go_editor(href="{{post.url}}?action=edit", target=="_blank")
				i.fa.fa-edit
			a.show_raw(href="{{post.url}}?action=show_raw", target=="_blank")
				i.fa.fa-code

			if post.tags
				span.tags
					i.fa.fa-tags
					for tag in post.tags
						a(href="/tag/{{tag}}")= tag

			.other_posts
				if pre_one
					a.pre(href='{{pre_one.url}}#main') &lt; {{ pre_one.title }}
				if next_one
					a.next(href='{{next_one.url}}#main') {{ next_one.title }} &gt;

	include include/comments.jade