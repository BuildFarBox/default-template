extends base
block title
	post.title
block content
	.detail_post
		.post
			h2.title
				a(href=post.url)= post.title
			.post_body= post.content
			.info
				span.date(title="Public Date")
					i.fa.fa-clock-o
					|&nbsp;
					{{post.date.format('%Y-%m-%d %H:%M')}}
				span.visitors(title="Views")
					i.fa.fa-user
					|&nbsp;
					{{ post.visits or 0 }}
				if post.tags
					span.tags
						i.fa.fa-tags
						for tag in post.tags
							a(href="/tag/{{tag}}")= tag

				.other_posts
					if pre_one
						a.pre(href='{{pre_one.url}}#main') &lt; {{ pre_one.title }}
					if next_one
						a.next(href='{{next_one.url}}#main') {{ next_one.title }} &gt;

		include include/comments.jade