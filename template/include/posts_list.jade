.posts
	for post in posts
		.post
			h2.title
				a(href=post.url)= post.title
			.post_body= post.content.opening or post.content.limit(300)
			.info
				span.date(title="Public Date")
					i.fa.fa-clock-o
					|&nbsp;
					{{post.date.format('%Y-%m-%d')}}
				span.visitors(title="Views")
					i.fa.fa-user
					|&nbsp;
					{{ post.visits or 0 }}
				if post.tags
					span.tags
						i.fa.fa-tags
						for tag in post.tags
							a(href="/tag/{{tag}}")= tag
				a(href="{{post.url}}?action=show_raw", target=="_blank")
					i.fa.fa-code
				a.read_more(href=post.url)
					i.fa.fa-file-text-o
					| &nbsp; Read More

include include/paginator